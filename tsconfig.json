{
  "compilerOptions": {
    "target": "es2021",
    "module": "commonjs",
    "moduleResolution": "node",
    "sourceMap": true,
    "strict": true,
    "noUncheckedIndexedAccess": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "composite": true,
    "incremental": true,
    "noErrorTruncation": true
  },
  "references": [
    {
      "path": "./packages/database-importer"
    },
    {
      "path": "./packages/database-utils"
    },
    {
      "path": "./packages/rapidroute"
    },
    {
      "path": "./packages/wiki-scraper"
    }
  ],
  "include": ["packages/**/*"],
  "exclude": ["node_modules", "packages/**/node_modules", "packages/**/dist"]
}
